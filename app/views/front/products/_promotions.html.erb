<% if (promotions = product.promotions).present? && promotion = promotions.first -%>
  <section class="events_info">
    <h2>参与活动详情</h2>
    <div class="picbox">
      <%= link_to image_tag("temp/400_400_2.jpg"), front_promotion_url(promotion.id) -%>
    </div>
    <div class="infobox">
      <%= promotion.content -%>
    </div>
    <div class="clearfix"></div>
  </section>
<% end -%>
