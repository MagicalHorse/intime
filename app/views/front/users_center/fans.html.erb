<%= content_for :head_nav do -%>
<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".aside"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
<ul class="nav">
  <li><a href="javascript:history.go(-1);"><i class="icon-undo"></i></a></li>
  <li class="title">我的粉丝</li>
</ul>
<% end -%>

<div class="span9 main">
  <!-- follow -->
  <section class="portfolio">
  <ul class="thumbnails">
    <% @results && @results.each do |result|%>
    <li class="fans">
    <div class="thumbnail">
      <div>
        <a href="<%= front_his_info_path(result[:id])%>" class="face">
          <img src="<%= result[:logo]%>" alt="<%= result[:nickname]%>" width="80" height="80">
        </a>
        <ul class="info">
          <li class="name"><i class="icon-star"></i>
          <a href="<%= front_his_info_path(result[:id])%>">
            <%= result[:nickname]%>
          </a>
          </li>

          <li class="follow">
          <button type="button" class="btn btn-mini btn-danger">
            <i class="icon-plus icon-white"></i>
            <%= link_to raw("关注"), front_follow_path(result[:id]), class: 'favor', remote: true, method: :post -%>
          </button>
          </li>

          <% if false %>
            <li class="follow">
            <button type="button" class="btn btn-mini">
              <i class="icon-minus"></i>
              <%= link_to raw("取消关注"), front_unfollow_path(result[:id]), class: 'favor', remote: true, method: :post -%>
            </button>
            </li>
          <% end %>

          <li class="atten">
          <span>关注<%= result[:liketotal]%></span>
          <span>粉丝<%= result[:likedtotal]%></span>
          <span>分享<%= result[:sharetotal]%></span></li>
        </ul>
      </div>
    </div>
    </li>
  <% end %>
  </ul>
  </section>
</div>
