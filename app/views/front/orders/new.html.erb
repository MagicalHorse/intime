<div class="span9 main">
  <!-- 商品信息 -->
  <section class="promo_info addorder">
    <div id="picbox" class="carousel slide">
      <div class="carousel-inner">
        <div id="order_div_img"><img id="order_img" src="<%= default_product_pic_url %>" alt=""></div>
      </div>
    </div>
    <div class="infobox">
      <div class="head">
        <h1></h1>
        <ul class="meta relative">
          <li><span>吊牌价</span>￥<i id="originprice"></i></li>
          <li><span>销售价</span>￥<em id="price"></em></li>
          <li><span>货号</span><p id="huohao"></p></li>
          <div class="brand"></div>
        </ul>
      </div>         
      <div class="buyinfo">
        <div class="prop mb20" data-toggle="buttons-radio">
          <span class="tages">颜色</span>
          <div id="myTab">

          </div>
        </div>
        <div id="sss" class="tab-content">

        </div>

        <div class="item_num mb20" >
          <div class="change-goods-num"> <span class="tages">数量</span> <a href="javascript:void(0);" class="goodsNumMinus"><span class="icon-common-negative"></span></a>
            <input tyep="text"  class="goods-num" value="1" name="3" id="goods_num">
            <a href="javascript:void(0);"  class="goodsNumPlus" ><span class="icon-common-add"></span></a></div>
        </div>
        <div class="property">您选择颜色：<span id="goods_color"></span> 尺码：<span id="goods_size"></span> 购买数量：<span class="goods-num" id="goods_num" >1</span>件</div>
