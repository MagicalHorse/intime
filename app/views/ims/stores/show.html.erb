<%= render 'ims/shared/countdown' %>
<header id="TOP">
    <div class="header-box">
        <div class="head-img">
            <%= image_tag "ims/shop-browse#{@store[:data][:template_id] || 1}.jpg" %>
        </div>
        <div class="shop-head" id="head-menu">
            <div class="shop-head-inner">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="row-fluid">
                            <div class="span3">
                                <span class="img-spa">
                                  <% if @store[:data][:logo].present? %>
                                  <img src="<%= @store[:data][:logo] %>" class='face-img' />
                                  <% else %>
                                  <%= image_tag("ims/logo-default.jpg", class: "face-img") %>
                                  <% end %>
                                </span>
                            </div>
                            <div class="span9">
                                <h2 class="shop-name browerse-shop-name"><%= @store[:data][:name].present? ? @store[:data][:name] : "暂无店铺名称" %>&nbsp;</h2>
                                <div class="browerse-icon">
                                    <div class="row-fluid">
                                        <div class="span4 text-center">
                                            <a class="browerse-nav-link nav-link-fist" href="tel:<%= @store[:data][:mobile] %>"><i class="hd btn-tel"></i><span>联系店主</span></a>
                                        </div>
                                        <div class="span4 text-center">
                                            <a class="browerse-nav-link" href="javascript:void(0)" id="favor_store"><i class="hd btn-star"></i><span>收藏</span></a>
                                            <a class="browerse-nav-link" href="javascript:void(0)" id="unfavor_store"><i class="hd btn-star-active"></i><span>取消收藏</span></a>
                                        </div>
                                        <div class="span4 text-center">
                                            <a class="browerse-nav-link" href="javascript:void(0);" id="share_to_user_model"><i class="hd btn-share"></i><span>分享好友</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="wrap-inner">
    <% if @store[:data][:gift_card].blank? && @store[:data][:combos].blank? %>
      <%= render 'ims/shared/empty' %>
    <% else %>
    <% if @store[:data][:gift_card].present? %>
		<div class="module">
            <div class="module-title">
                <h3>礼品卡</h3>
            </div>
             <% @store[:data][:gift_card].each do |card| %>
            <div class="module-content module-content-card">
                <div class="img-box">
                <a href="javascript:void(0);" value="<%= ims_cards_path(store_id: @store[:data][:id]) %>" class="add_loading">
                    <img src="<%= card["Image"] %>">
                </a>
                </div>
                <p><a href="#"><%= card["Desc"] %></a></p>
                <div class="clearfix">
                    <p class="pull-right price-box text-center price-card">
                        <span><a href="javascript:void(0);" value="<%= ims_card_orders_pay_path(store_id: @store[:data][:id], showwxpaytitle: 1) %>" class="btn btn-danger btn-large add_loading">购 买</a></span>
                    </p>
                </div>
            </div>
            <% end %>
        </div>
        <% end %>


        <% if @store[:data][:combos].present? %>
        <div class="module module-ele">
            <div class="module-title">
                <h3>精品搭配</h3>
            </div>
        </div>

        <% @store[:data][:combos].each do |combo| %>
        <div class="module module-ele">
            <div class="module-content module-content-img">
                <div class="suit-box clearfix">
                    <div class="row-fluid">
                    	<div class="span12">
                    		<div class="suit-left">
		                    	<a class="img-box img-posi add_loading" href="javascript:void(0);" value="<%= ims_combo_path(id: combo["Id"], t: Time.now.to_i) %>">
                                    <% img_url = combo['Image'].present? ? combo['Image'] : Settings.default_image_url.product.middle %>
                                    <img src="<%= img_url %>">
                                    <%= image_tag("ims/jingpin.png", class: "mark-img") %>
                                </a>

                                    <p><a href="<%= ims_combo_path(id: combo["Id"], t: Time.now.to_i) %>"><%= combo["Desc"] %></a></p>
		                    </div>
                    	</div>
                    </div>
                </div>

                <div class="clearfix countdown-browser">
                    <p class="pull-left price-box">
                        <span class="txt3 price price-span">打包价：<em>¥<%= combo["Price"] %></em></span>
                    </p>
                    <p class="pull-left price-box">
                        <% if combo["ExpiredIn"].present? %>
                        <span class="pull-left countdown">
                            <em id="d<%=combo['Id']%>">0</em><span>天</span><em id="h<%=combo['Id']%>">00</em>:<em id="m<%=combo['Id']%>">00</em>:<em id="s<%=combo['Id']%>">00</em><span>后下架</span>
                        </span>
                        <script type="text/javascript">
                          tms[tms.length] = "<%=combo['ExpiredIn'] %>";
                          day[day.length] = "d<%=combo['Id']%>";
                          hour[hour.length] = "h<%=combo['Id']%>";
                          minute[minute.length] = "m<%=combo['Id']%>";
                          second[second.length] = "s<%=combo['Id']%>";
                        </script>
                        <% else %>
                        <span class="pull-left countdown">
                            长期有效
                        </span>
                        <% end %>
                        <span class="pull-right">
                        <a class="btn btn-danger btn-small add_loading" href="javascript:void(0);" value="<%= ims_orders_new_path(:combo_id => combo['Id'])%>">点击购买</a>
                        </span>
                    </p>
                </div>
            </div>
        </div>
        <% end %>
        <% end %>
        <% end %>
<div class="intime-btm intime-btm-index">
    <%= image_tag "ims/intime-btm.png" %>
  </div>

	</div>

<%= content_for :javascripts do %>
<script>
  if (typeof WxEnv == 'undefined') {
    WxEnv = {};
  }
  WxEnv.shareUrl = "<%= ims_store_url(:id => @store[:data][:id], :t => Time.now.to_i) %>";
  WxEnv.shareImgUrl = "<%= @store[:data][:logo] %>";
  WxEnv.shareName = "欢迎您光临<%=@store[:data][:name]%>迷你店";
  WxEnv.shareDes = "希望您能找到自己喜欢的商品,谢谢光临!~~~ 欢迎您来看看哦！";

  $(function(){
    <% if @store[:data][:is_favored] %>
    $("#favor_store").hide();
    <% else %>
    $("#unfavor_store").hide();
    <% end %>

    $("#favor_store").click(function(){
        $.post("/ims/favorites/favor", {
            id: "<%= @store[:data][:id] %>",
            type: "1"
        },function(){});
        $("#favor_store").hide();
        $("#unfavor_store").show();
    })

    $("#unfavor_store").click(function(){
        $.post("/ims/favorites/unfavor", {
            id: "<%= @store[:data][:id] %>",
            type: "1"
        },function(){});
        $("#unfavor_store").hide();
        $("#favor_store").show();
    })
    format_img(".img-spa");
  });
</script>
<% end %>