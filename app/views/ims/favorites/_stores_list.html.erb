<div class="module-table-box module-record">
  <% stores_list.each do |store| %>
  <div class="module common-white" onclick="window.location.href = '<%= ims_store_store_path(store["id"]) %>'">
    <div class="txt-block detail-contact">
      <div class="row-fluid">
        <div class="span3"><span class="img-span"><img class="img-rounded" src="<%= store["image"] %>"></span></div>
        <div class="span9">
            <div class="collection-p collection-pbox">
              <p class="txt2 txt-red"><%= store["name"] %></p>
              <p class="txt2 tel-nun">电话：<%= store["phone"] %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<script type="text/javascript">
  $(".img-span").each(function(){
        $(this).css("height", $(this).width())
        $(this).css("line-height", $(this).height()+"px")
    });
</script>