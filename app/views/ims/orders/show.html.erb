<% content_for :javascripts do %>
  <script>
    $(function(){

      $("#cancel_order").on("click", function(){
        if(confirm("是否要取消订单?")){
          this_ele = $(this)
          order_id = this_ele.attr("value")
          $.post("/ims/orders/"+order_id+"/change_state", {_method: "put"}, function(data){
            if(data["status"] == true){
              $("#order_status").text("已取消")
              alert("取消订单成功")
              this_ele.remove()
            }else{
              alert("取消订单失败")
            }
          }, "json")
        }
      })

    })
  </script>
