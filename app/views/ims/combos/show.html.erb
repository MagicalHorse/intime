<%= render 'ims/shared/countdown' %>
<div class="wrap-inner back-wrap-inner">
    <div class="module module-color-white clearfix">
      <div class="row-fluid">
        <div class="span12">
            <!-- <div id="myCarousel" class="carousel slide" style="overflow: hidden;">
              <ol class="carousel-indicators">
                <li class="active"></li>
                <li></li>
                <li></li>
              </ol>
              <div class="carousel-inner slides">
                <% @remote_combo[:data][:images].each_with_index do |src, i| %>
                  <div class="item slide <%= 'active' if i == 0 %>"><img src="<%= src %>"></div>
                <% end %>
              </div>
            </div> -->
            <div class="swiper-container">
              <div class="swiper-wrapper">
                <% @remote_combo[:data][:images].each_with_index do |src, i| %>
                 <div class="swiper-slide">
                   <img src="<%= src %>">
                 </div>
                 <% end %>
              </div>
            </div>


            <div class="module module-white module-show">
              <div class="row-fluid">
                <% @remote_combo[:data][:products].each do |product| %>

                <div class="span4">
                  <div class="combos-product">
                    <img src="<%= product[:image].present? ? product[:image] : Settings.default_image_url.product.small %>">
                    <p><span class="txt3">￥<%= product[:price] %></span></p>
                    <a class="btn btn-danger btn-mini btn-block" href="<%= ims_orders_new_path(:product_id => product[:id], :store_id => @store_id) %>">点击购买</a>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
        </div>
      </div>
    </div>
    <% if params[:private_to].present? %>
    <div class="private-custom">
      <div class="private-bg">
        <div class="private-text">
          <p class="txt4 txt-red"><%= @remote_combo[:data][:private_desc] %>亲:</p>
          <p class="txt4">
            希望你喜欢哦！
          </p>
        </div>
      </div>
    </div>
    <% end %>
    <div class="p-title">
      <h4><%= @remote_combo[:data][:desc] %></h4>
      <div class="p-price1 clearfix">
        <p class="pull-left price-box">
              <span>打包价：<em>￥<%= @remote_combo[:data][:price] %></span>
          </p>
        <p class="pull-left price-box">
          <% if @remote_combo[:data]["expire_in"].present? %>
              <span class="pull-left countdown">
                  <em id="d<%=@remote_combo[:data][:id]%>">00</em><span>天</span><em id="h<%=@remote_combo[:data][:id]%>">00</em>:<em id="m<%=@remote_combo[:data][:id]%>">00</em>:<em id="s<%=@remote_combo[:data][:id]%>">00</em><span>后下架</span>
              </span>
              <script type="text/javascript">
                          tms[tms.length] = "<%=@remote_combo[:data]['expire_in'] %>"; 
                          day[day.length] = "d<%=@remote_combo[:data][:id]%>"; 
                          hour[hour.length] = "h<%=@remote_combo[:data][:id]%>"; 
                          minute[minute.length] = "m<%=@remote_combo[:data][:id]%>"; 
                          second[second.length] = "s<%=@remote_combo[:data][:id]%>"; 
                        </script>
          <% else %>    
            <span class="pull-left countdown">
               长期有效
            </span>
          <% end %>    
              <span class="txt4 pull-right" id="favor_combo"><a href="javascript:void(0)"><i class="fa fa-star-o"></i> 收藏</a></span>
              <span class="txt4 pull-right txt-red" id="unfavor_combo"><i class="fa fa-star"></i> 已收藏</span>
          </p>  
      </div>
    </div>

    <div class="bottom-btnbox">
    <button class="btn btn-small btn-danger">分享给好友</button>
    <button class="btn btn-small btn-danger">
      <% if current_user.store_id == @remote_combo[:data][:id] %>
      <a href="<%= edit_ims_store_combo_path(:id => @remote_combo[:data][:id]) %>">编 辑</a>
      <% else %>
      <a href="<%= ims_orders_new_path(:combo_id => @remote_combo[:data][:id], :store_id => @store_id)%>">立刻购买</a>
      <% end %>
    </button>
  </div>

  </div>


<script type="text/javascript">
  $(function(){

    var mySwiper = $('.swiper-container').swiper({
    mode:'horizontal',
    autoplay: 3000,
    speed: 1000,
    calculateHeight: true,
    watchActiveIndex: true,
    loop: true,
    centeredSlides: true,
    offsetPxBefore: 100
  });

    <% if @remote_combo[:data][:is_favored] %>
    $("#unfavor_combo").hide();
    <% else %>
    $("#favor_combo").hide();
    <% end %>

    $("#favor_combo").click(function(){
        $.post("/ims/favorites/favor", {
            id: "<%= @remote_combo[:data][:id] %>",
            type: "2"
        },function(){});
        $("#favor_combo").hide();
        $("#unfavor_combo").show();
    })

    $("#unfavor_combo").click(function(){
        $.post("/ims/favorites/unfavor", {
            id: "<%= @remote_combo[:data][:id] %>",
            type: "2"
        },function(){});
        $("#unfavor_combo").hide();
        $("#favor_combo").show();
    })

  })
</script>
