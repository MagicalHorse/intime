    <div class="xclose clearfix"><button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button></div>
    <div class="modal-content">
      <div class="p-modal-body">

        <div class="swiper-container" id="p-swiper">
          <div class="swiper-wrapper">
            <% product = @product %>
            <% salecolors = product[:salecolors] %>
            <% img_url = Product.img_url(salecolors.first.try(:[], :resource)) %>
             <div class="swiper-slide">
              <img src="<%= img_url %>">
             </div>
             
          </div>
        </div>

        <div class="p-modal-desc">
          <p class="txt3"><%= product[:name] %></p>
          <p><span class="txt2">微信价： <i class="txt-red">￥<%= product[:price] %></i></span><span class="txt5">￥<%= product[:originprice] %></span></p>
          <p class="text-center"><%= link_to "点击购买", 'javascript:void(0);', class: "btn btn-danger btn-small loading-box", value: ims_orders_new_path(:product_id => product[:id], :store_id => @store_id) %></p>
        </div>
      </div>
  </div>
  <script type="text/javascript">
   $(".xclose").on('click', function(){
          $("#p_pop").modal('hide');
        });

   $(".p-modal-desc .loading-box").on("click", function(){
          url = $(this).attr("value")
          $("#loading-box").modal()
          setTimeout(function(){
            window.location.href = url
          }, 1)
        })
  </script>