<div id="ex2" class="modal hide fade modal-red" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="position: fixed; top: 0%; left: 85%;">
</div>

<div id="shareToAllModel" class="modal hide fade modal-grey modal-red" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="position: fixed; top: 0%; left: 85%;">
    <div class="text-center">
      <div class=""><img src="/images/ims/right-top.png"></div>
    </div>
  </div>

  <div id="shareToUserModel" class="modal hide fade modal-grey modal-red" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="position: absolute; top: 0%; left: 50%;">
    <div class="text-center">
      <div class=""><img src="/images/ims/right-top.png"></div>
    </div>
  </div>

  <div id="shareToMomentModel" class="modal hide fade modal-grey modal-red" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="position: absolute; top: 0%; left: 50%;">
    <div class="text-center">
      <div class=""><img src="/images/ims/right-top.png"></div>
    </div>
  </div>

 <!--加载框-->
  <div id="loading-box"  tabindex="-1" aria-labelledby="myModalLabel" data-backdrop="false" style="position: absolute; top: 38%; left:50%;text-align:center;background-color:#8C8D8F;color:#fff;display:none;">
  <p><img src="/images/ims/loading.gif" ></p>
  <p>加载中，请稍候</p>
</div>

  <%= yield :javascripts -%>
  <script>
    $(function(){
      // 全局分享按钮
      $("#share_to_all_model").click(function(){
        $("#shareToAllModel").modal();
        setTimeout(function(){
          $("#shareToAllModel").modal('hide');
        },  3000);
      })

      // 分享给好友按钮
      $("#share_to_user_model").click(function(){
        $("#shareToUserModel").modal();
        setTimeout(function(){
          $("#shareToUserModel").modal('hide');
        },  3000);
      })

      // 分享到朋友圈按钮
      $("#share_to_moment_model").click(function(){
        $("#shareToMomentModel").modal();
        setTimeout(function(){
          $("#shareToMomentModel").modal('hide');
        },  3000);
      })
    });
  </script>