<div class="module module-white">
  <div class="verify-code">
    <div class='verify-code-txt'>
      <h2>我们已发送验证码短信到这个号码</h2>
      <h2><%= @identify_phone %></h2>
    </div>
    <%= form_tag(verfiy_sms_code_ims_accounts_path, class: "verify-form form-horizontal", :method => 'get') do %>
    <div>
      <%= text_field_tag "sms_code", "", class: "input-verify-code", placeholder: "请填写验证码" %>
      <div class='btn btn-large btn-danger' id="count_down">接收短信大约需要<span id="num">6</span>秒</div>
      <div class='btn btn-large btn-danger' id="resend" style="display:none">重新获取验证码</div>
    </div>
    <button class="btn btn-large btn-danger btn-bock">下一步</button>
    <% end %>
  </div>
</div>

<%= content_for :javascripts do %>
<script>
  function count_down(){
    $("#num").text( parseInt($("#num").text()) - 1 );
    if(parseInt($("#num").text()) == 0){
      clearInterval(interval_count_down);
      $("#num").text(60);
      $("#count_down").hide();
      $("#resend").show();
    }
  }

  $(document).ready(function() {
    interval_count_down = setInterval("count_down()", 1000);

    $("#resend").click(function(){
      $.post("/ims/accounts/resend_sms", {},function(){
        $("#count_down").show();
        $("#resend").hide();
        interval_count_down = setInterval("count_down()", 1000);
      }, "text");
    })

  });
</script>
<% end %>