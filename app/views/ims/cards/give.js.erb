<% if @notice.present? %>
$("#myModal").html("<div class='text-center'><div class='txt4 txt-red'>温馨提示</div><div class='txt4'><%= flash[:notice] %></div><a class='btn btn-danger btn-small btn-block btn-modal' data-dismiss='modal' aria-hidden='true'>OK</a></div>");
$("#myModal").modal();
<% else %>
$("#myModal").html("<div class='text-center'><div class='txt4 txt-red'>温馨提示</div><div class='txt4'>赠送成功，请通知好友查收</div><a class='btn btn-danger btn-small btn-block btn-modal' data-dismiss='modal' aria-hidden='true'>OK</a></div>");
$("#myModal").modal();
setTimeout(function(){
  window.location.href = "<%= gift_page_ims_cards_path %>?charge_no=<%= @charge_no %>";
},2000);
<% end %>