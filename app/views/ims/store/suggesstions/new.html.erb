<%= form_tag ims_store_suggesstions_path do %>
  <%= text_area_tag "content" %>
  <%= link_to "提交", "javascript:void(0);", id: "save_suggesstion" %>
<% end %>


<% content_for :javascripts do %>
  <script>
    $(function(){
      $("#save_suggesstion").on("click", function(){
        content = $("#content").val()
        $.post("/ims/store/suggesstions", {content: content}, function(data){
          if(data["status"] == true){
            alert("意见反馈成功")
          }else{
            alert("意见反馈失败")
          }
        }, "json")
      })
    })
  </script>
<% end %>