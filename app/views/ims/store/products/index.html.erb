<div class="module module-bg-white clearfix">
  <% @products.each do |product| %>
    <!-- list start -->
    <div class="p-list p-list-first clearfix">
      <div class="row-fluid">
      <div class="span4">
       <div class="p-pic">
         <%= image_tag "/images/ims/no-image.jpg" %>
       </div>
      </div>
      <div class="span8">
        <div class="p-title">
          <h3>
            男士专用运动鞋男士专用运动鞋
          </h3>
        </div>
        <div class="p-price1 clearfix">
          <span class="txt4">微信价：<em>￥<%= product["price"] %></em></span>
          <span class="txt6"><em>吊牌价：￥380.00</em></span>
        </div>
        <div class="buttons">
          <%= link_to edit_ims_store_product_path(product["id"]) do %>
            <button class="btn btn-mini btn-danger">编 辑</button>
          <% end %>
          <%= link_to "javascript:void(0);" do %>
            <button class="btn btn-mini btn-danger button-select">选 择</button>
          <% end %>
        </div>
       </div>
     </div>
    </div>
    <!-- list end -->

  <% end %>

</div>
