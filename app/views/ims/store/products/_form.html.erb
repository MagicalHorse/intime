          <% else %>
            <%= select_tag "size_ids[]", options_for_select([]), multiple: "multiple", id: "size_ids" %>
          <% end %>
        </div>
        <div class="inline-horizontal" id="size_str_wrapper" style="<%= @product.try(:[], :size_str).present? ? 'display: line;' : 'display: none;' %>">
          <span class="help-inline"><abbr>*</abbr>规格：</span>
          <%= text_field_tag "size_str", @product.try(:[], :size_str), class: "form-textframe" %>
        </div>
