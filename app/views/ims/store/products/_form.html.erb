          <%= hidden_field_tag :combo_id, @combo_id %>
        <% end %>
        <div class="block-box">
          <%= submit_tag "提交", class: "btn btn-danger btn-large btn-block" %>
        </div>
      <% end if nil%>

      <%= form_tag url, method: method, multipart: true, id: "product_form", class: "form-defined" do %>
        选择图片： <%= file_field_tag "image", style: "display: none;", id: "input", value: @product.try(:[], :image) %>
        <%= hidden_field_tag "id", @product.try(:[], :id) %>
