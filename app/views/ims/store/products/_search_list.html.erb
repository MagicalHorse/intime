<% products.each do |products| %>
  <div class="module module-search-ele paginate-content">
    <div class="module-title">
        <div class="row-fluid">
            <div class="span12"><h3><%= products.first["createdDate"].to_date.to_s %></h3></div>
        </div>
    </div>
    <div class="search-result-content">
      <% products.in_groups_of(3).each do |objs| %>
        <div class="row-fluid">
          <% objs.compact.each do |obj| %>
            <div class="span4">
                <div class="goods-box">
                    <div class="imgs">
                      <img src="<%=Product.img_url(obj["resource"].first)%>">
                      <div class="goods-price">￥<%= obj["price"] %></div>
                    </div>
                    <div class="goods-text">
                      <a href="javascript:void(0);" class="two-line">
                        <%= "#{obj['brand']['name']}#{obj['tag']['name']}"%>
                      </a>
                        <span>
                        <% if nil %>
                        <a href="<%= add_to_combo_ims_store_product_path(:id => obj["id"], :combo_id => combo.try(:id), :product_type => "1") %>" class="btn btn-danger btn-mini btn-block">选择搭配</a>
                        <% end %>
                        <% if combo.combo_products.pluck(:remote_id).include?(obj["id"]) %>
                        <%= link_to "已选择", "javascript:void(0);", class: "btn btn-grey btn-mini btn-block", product_id: obj["id"] %>
                        <% else %>
                        <%= link_to "选择搭配", "javascript:void(0);", class: "btn btn-danger btn-mini btn-block add_to_combo", product_id: obj["id"] %>
                        <% end %>
                        </span>
                    </div>
                </div>
            </div>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
<% end %>
<script>
     format_img(".goods-box .imgs");
</script>