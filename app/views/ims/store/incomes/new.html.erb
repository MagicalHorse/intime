<% if false %>
<%= form_tag ims_store_incomes_path, id: "income_form" do |f| %>
<p>提现金额：<%= text_field_tag :amount %></p>
<p>银行：<%= text_field_tag :bank_id %></p>
<p>卡号：<%= text_field_tag :card_id %></p>
<p>用户姓名：<%= text_field_tag :name %></p>
<p><%= submit_tag "提交" %></p>
<% end %>
<% end %>


<div class="wrap-content">
    <div class="module module-white">
      <div class="module-withdrawal">
        <%= form_tag ims_store_incomes_path, id: "income_form", class: 'form-defined' do |f| %>
          <div class="module common-white">
              <div class="controls-defined defined-small">
                <label class="col-4"><abbr class="txt-red">*</abbr>金额 (元):</label>
                <div class="col-8">
                <%= text_field_tag :amount, "", placeholder: "请输入提现金额" %>
                </div>
              </div>
          </div>  
          <div class="module common-white module-grey">
              <div class="controls-defined defined-small">
                <div class="col-12"><span class="txt-red">可提现金额 ￥<%= @income[:data][:avail_amount] %>  元</span></div>
              </div>
          </div> 
          <div class="module common-white">
            <div class="controls-defined defined-small">
              <label class="col-4"><abbr class="txt-red">*</abbr>开户银行:</label>
              <div class="col-8">
                <select name="bank">
                  <% @banks[:data][:items].each do |item| %>
                   <option value="<%=item["code"]%>"><%= item["name"] %></option>
                  <% end %>
                </select>
              </div>
            </div>
          </div> 
          <div class="module common-white">
              <div class="controls-defined defined-small">
                <label class="col-4"><abbr class="txt-red">*</abbr>开户姓名:</label>
                <div class="col-8">
                <%= text_field_tag :user_name %></div>
              </div>
          </div>
          <div class="module common-white">
              <div class="controls-defined defined-small">
                <label class="col-4"><abbr class="txt-red">*</abbr>卡号:</label>
                <div class="col-8"><%= text_field_tag :bank_no %></div>
              </div>
          </div>
          <div class="module withdrawal-notice">
              <p class="txt3 txt-grey"><i class="fa fa-exclamation-circle txt-red"></i> 温馨提示</p>
              <ol class="txt3 txt-grey">
                <li>提交提现申请我们审核通过后，我们将尽快将钱打到您所提交的账户中。</li>
                <li>提交提现申请时，请务必保证填写信息的准确性，否则您将不能收到款项。</li>
              </ol>
              <button class="btn btn-danger btn-large btn-block" type="submit">提交申请</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>






<%= content_for :javascripts do -%>
<script type="text/javascript">
  $(function(){

    $("#income_form").validate({
      rules: {
        "amount": {
          required: true
        },
        "bank_no": {
          required: true
        },
        "bank": {
          required: true
        },
        "user_name": {
          required: true
        }
      },
      errorPlacement:function(error, element){
        element.after(error)
      }
    })

  })
</script>
<% end %>