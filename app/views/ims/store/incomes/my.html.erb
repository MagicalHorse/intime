<div class="wrap-inner back-wrap-inner bottom-distance">
  <div class="row-fluid">
    <div clss="span12">
      <div class="income">
        <div class="header text-center">

          <div class="row-fluid">
            <div class="left_module">
              <div class="title">
                可体现金额
              </div>
              <div class="money">
                ￥<%= @income[:data][:avail_amount] %>
              </div>
              <div class="link">
                <%= link_to "提现历史记录", "javascript:void(0);", id: "income_list", value: list_ims_store_incomes_path %>
              </div>
            </div>
            <div class="right_module">
              <div class="title">
                我的总收益
              </div>
              <div class="money">
                ￥<%= @income[:data][:total_amount] %>
              </div>
              <div class="link">
                <%= link_to "佣金明细清单", "javascript:void(0);", id: "income_index", value: ims_store_incomes_path %>
              </div>
            </div>
          </div>
        </div>


        <div class="common-white" id="pending_list" value="<%= pending_ims_store_incomes_path %>">
          <a href="javascript:void(0);"  class="income-menu2">
            <i class="fa fa-money"></i>
            <span class="txt-grey">提现申请中的金额</span>
            <i class="pull-right txt-grey"><span>￥<%= @income[:data][:request_amount] %></span></i>
          </a>
        </div>
        <div class="tips">
          <span><i class="fa fa-exclamation-circle"></i>成交7日并且没有发生退货才可提取！</span>
        </div>

        <div class="bottom-btnbox">
          <button id="new_income" class="btn btn-small btn-danger" value="/ims/store/incomes/new">
            <a href="javascript:void(0);">申请提现</a>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

  <script type="text/javascript">

  $("#new_income").click(function(){
    url = $(this).attr("value")
    $("#loading-box").modal()
    setTimeout(function(){
      window.location.href = url
    }, 1)
  });

   $("#income_list").click(function(){
     url = $(this).attr("value")
     $("#loading-box").modal()
     setTimeout(function(){
       window.location.href = url
     }, 1)
   });

   $("#pending_list").click(function(){
     url = $(this).attr("value")
     $("#loading-box").modal()
     setTimeout(function(){
       window.location.href = url
     }, 1)
   });
  </script>


