<% combos.each do |combo| %>
  <div class="module common-white combo_paginate-content">
    <div class="txt-block detail-contact">
        <div class="row-fluid">
          <div class="span3"><span class="img-span"><%= image_tag combo["image"] %></span></div>
          <div class="span9 collection-p">
            <p class="txt2"><%= link_to combo["desc"], ims_combo_path(combo["id"]) %></p>
            <p class="txt2 txt-red">打包价：￥<%= combo["price"] %></p>
            <div class="shelves">
              <%= link_to combo["is_online"] ? "下 架" : "上 架", "javascript:void(0);", class: "btn btn-danger btn-small card_or_combo", item_id: combo["id"], item_type: 2 %>
            </div>
          </div>

        </div>
    </div>
  </div>
<% end %>
<script>
    $(".img-span").each(function(){
        $(this).css("height", $(this).width())
        $(this).css("line-height", $(this).height()+"px")
    });
</script>