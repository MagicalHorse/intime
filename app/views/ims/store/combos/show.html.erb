                <% end %>
                
              </div>
            </div>
      
        <div class="p-title"><h4><%= @remote_combo[:data][:desc] %></h4></div>
        <div class="p-price1 clearfix">
          <span class="txt3">微信价：<em class="txt4">￥<%= @remote_combo[:data][:price] %>  </em></span>
        </div>
    </div>
  </div>
</div>

