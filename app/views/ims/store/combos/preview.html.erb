<div class="wrap-inner back-wrap-inner">
<div class="module module-bg-white clearfix">
  <div class="row-fluid">
    <div class="span12">
      <div id="myCarousel" class="carousel slide" style="overflow: hidden;">
              <ol class="carousel-indicators">
                <li class="active"></li>
                <li></li>
                <li></li>
              </ol>
              <!-- Carousel items -->
              <div class="carousel-inner slides">
                <% @combo.combo_pics.each_with_index do |img, i| %>
                  <div class="item slide <%= 'active' if i == 0 %>"><img src="<%= img.url %>"></div>
                <% end %>

              </div>
            </div>

        <div class="p-title"><h4><%= @combo.desc %></h4></div>
        <div class="p-price1 clearfix">
          <span class="txt3">微信价：<em class="txt4">￥<%= @combo.price %>  </em></span>
        </div>
    </div>
  </div>
</div>

<div class="module module-common">
  <div class="row-fluid">

      <% @combo.combo_products.each do |product| %>
      <div class="span4">
        <div class="combos-product">
          <img src="<%= product.img_url %>">
          <p><span class="txt3">￥<%= product.price %></span></p>
          <a class="btn btn-danger btn-mini btn-block" href="">点击购买</a>
        </div>
      </div>
      <% end %>

  </div>
  </div>

  <div class="bottom-btnbox">
    <form class="form-inline">
        <button class="btn btn-large btn-danger" type="button"><a href="<%= new_ims_store_combo_path(combo_id: @combo.id) %>"><i class="fa fa-eye"></i>返回</a></button>
        <!-- <button class="btn btn-large btn-danger"><i class="fa fa-upload"></i>提交发布</button> -->
    </form>
  </div>
</div>
<script type="text/javascript">
  $(function(){
    $("#myCarousel").swipeshow({
      autostart: true,    /* Set to `false` to keep it steady */
      interval: 3000,     /* Time between switching slides (ms) */
      initial: 0,         /* First slide's index */
      speed: 1500,         /* Animation speed (ms) */
      friction: 1,      /* Bounce-back behavior; use `0` to disable */
      mouse: true,        /* enable mouse dragging controls */
      keys: true
    });
  })
</script>
