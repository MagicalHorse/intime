<div class="wrap-content">
    <div class="module module-white min-height">
  		<div class="module-tab0 module-tab2">
        <ul class="nav nav-tabs" id="myTab">
          <li class="active"><a href="#home">礼品卡</a></li>
          <li><a href="#profile">其他订单</a></li>
        </ul>
         
        <div class="tab-content">
          <div class="tab-pane active" id="home">
            <div class="module-table-box module-record">
             <% if @giftcards[:data].present? && @giftcards[:data][:items].present? %>
              <% @giftcards[:data][:items].each do |item| %>
              <div class="module common-white">
                  <div class="row-fluid">
                    <div class="span12">
                        <div class="txt-block detail-contact">
                            <p class="txt8">礼品卡金额：<span class="txt-red">￥<%= item[:amount] %>元</span></p>
                            <p class="txt8 tel-nun">编码：</p>
                            <p class="txt8 tel-nun">下单时间：<%= item[:create_date] %></p>
                        </div>
                    </div>
                 </div>
              </div>
              <% end %>
              <% else %>
              <%= render 'ims/shared/empty' %>
             <% end %> 

            </div>
          </div>
          <div class="tab-pane" id="profile">
            <div class="module-table-box module-record">
              <% if @orders[:data].present? && @orders[:data][:items].present? %>
              <% @orders[:data][:items].each do |item| %>
              <div class="module common-white">
                  <div class="row-fluid">
                    <div class="span12">
                        <div class="txt-block detail-contact">
                            <p class="txt8">用户：</p>
                            <p class="txt8 tel-nun">订单号：<%= item[:order_no] %></p>
                            <p class="txt8 tel-nun">下单时间：<%= item[:create_date] %></p>
                            <p class="txt8 tel-nun clearfix"><span class="pull-left">订单状态：<span class="txt-red"><%= item[:status] %></span></span><span class="pull-right txt-red">￥<%= item[:amount] %></span></p>
                        </div>
                    </div>
                 </div>
              </div>
              <% end %>
              <% else %>
              <%= render 'ims/shared/empty' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
     $(function(){
        $('#myTab a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
        })
      })
  </script>