<div class="module module-bg-white clearfix paginate-content address">
  <% addresses.each_with_index do |address, index| %>
    <!-- list start -->
    <div class="p-list p-list-first clearfix <%= 'active' if (is_equal = address[:id].to_s == params[:origin_address_id]) %>" value="<%= address[:id] %>">
      <div class="row-fluid">
        <% if redirect_url.present? %>
        <div class="span1 text-center select_address">
          <%= radio_button_tag 'address[id]', address[:id], is_equal %>
        </div>
        <% end %>
        <div class="<%= redirect_url.present? ? 'span9' : "span10" %> address_div ">
          <div class="p-title">
            <div class="row-fluid">
              <div class="span12 detail-address-block">
                <% if nil %>
                <span class="h3 text-left">
                姓名： <%= address[:shippingperson] %>
                </span>
                <span class="h3 text-right">
                电话： <%= address[:shippingphone] %>
                </span>
                <% end %>
                <p class="txt8 ">
                   <span>
                     <i class="fa fa-user"></i><span id="weixin_name">张三</span>
                   </span>
                   &nbsp;
                   <span>
                   <i class="fa fa-phone"></i><span id="weixin_contact">13581575444</span>
                   </span>
                 </p>
              </div>

            </div>
          </div>

          <div class="info clearfix address_info">
            <span class="txt4">
              <%= "#{address[:shippingprovince]} #{address[:shippingcity]} #{address[:shippingdistrict]} #{address[:shippingaddress]}" %>
            </span>
          </div>

        </div>

        <div class="span2 text-right edit_link ">
          <%= link_to_icon "fa fa-pencil", "", "javascript:void(0);", value: edit_ims_address_path(address[:id], redirect_url: redirect_url), class: "loading_box_link" %>
        </div>
      </div>
    </div>
    <!-- list end -->

  <% end %>

</div>
