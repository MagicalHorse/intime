/*----------------------------Common Css------------------------------*/
.login-form { padding: 10px 30px;}
.login-form div {
    text-align: center;
    margin: 15px;
  }
  .login-form div:last-child {
    margin-top: 40px; 
  }

  .login-form p {
    margin: 2px;
  }

  .login-form input {
     margin-bottom: 0;
     height: 50px;
     width: 100%;
     color: #abadb3;
     font-size: 18px;
  }

  .login-form .tips {
    text-align: left;
    color: #abadb3;
    font-size: 20px;
    margin-top: 0;
  }
  .login-form .btn {
    width: 100%;
  }



/*----------------------------mobile Css------------------------------*/
@media screen and (max-width: 580px) {
  .login-form .tips { font-size: 14px; }
  .login-form input {height: 30px; font-size: 13px;}
}
